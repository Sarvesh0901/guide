<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="HelloBooks Automation Suite" parallel="methods" thread-count="3">
    
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="dev"/>
    
    <listeners>
        <listener class-name="com.hellobooks.automation.listeners.ExtentReportListener"/>
        <listener class-name="com.hellobooks.automation.listeners.RetryListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <test name="Login Tests" preserve-order="true">
        <classes>
            <class name="com.hellobooks.automation.tests.LoginTests"/>
        </classes>
    </test>
    
    <test name="Signup Tests" preserve-order="true">
        <classes>
            <class name="com.hellobooks.automation.tests.SignupTests"/>
        </classes>
    </test>
    
    <test name="Onboarding Tests" preserve-order="true">
        <classes>
            <class name="com.hellobooks.automation.tests.OnboardingTests"/>
        </classes>
    </test>
    
</suite>